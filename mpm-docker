d tracks[0-7] 254
; For a period-accurate clock speed
; d clock 4000
attach dsk mpm.dsk
attach dsk1 app.dsk
attach dsk2 supercalc.dsk
attach dsk3 dbase.dsk
attach dsk4 wordstar.dsk
attach dsk5 multiplan.dsk
attach dsk6 games.dsk
attach dsk7 tp3.dsk
attach hdsk i.dsk
attach hdsk1 j.dsk
d common b000
set cpu	64k
set cpu itrap
set cpu z80
set cpu altairrom
set cpu banked
set simh timeroff
set sio all
; Allow the machine to sleep (1ms) when serial idles
set sio 1000
; When using MP/M, terminals are on port 8823
attach sio 8823
; For a docker image, we prefer to run headless. 
; Console will be the first telnet session to connect to 8823.
; set console telnet=8800
boot dsk
bye
